<script>
  function validateForm() {
      var password = document.getElementById("password").value;
      var confirmPassword = document.getElementById("confirm_password").value;
      if (password != confirmPassword) {
          alert("Passwords do not match.");
          return false;
      }
      return true;
  }
</script>

<h1>Register</h1>
<p>Please register to create an account.</p>
<form action="/user/register" method="post" onsubmit="return validateForm();">
  <div style="text-align: left;">
      <label for="email">Email:</label>
      <br>
      <input type="email" id="email" name="email" required>
  </div>
  <div style="text-align: left;">
      <label for="password">Password:</label>
      <br>
      <input type="password" id="password" name="password" required>
  </div>
  <div style="text-align: left;">
      <label for="confirm_password">Confirm Password:</label>
      <br>
      <input type="password" id="confirm_password" name="confirm_password" required>
  </div>
  <button type="submit">Register</button>
</form>

<p style="margin-top: 50px">Already have an account? <a href="/user/login">Login here!</a></p>

<p style="margin-top: 300px;">By registering, you agree that we will store and process your data to provide you with our services. We respect your privacy and will handle your data in accordance with our Privacy Policy.</p>